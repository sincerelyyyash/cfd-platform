{
  "extends": "../../packages/config-typescript/base.json",
  "compilerOptions": {
    "module": "Preserve",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "types": ["node"]
  },
  "include": ["src"]
}

